<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.home.siniestros.NuevoSiniestroFragment"
    android:layout_margin="16dp">

    <Spinner
        android:id="@+id/spinnerSiniestros"
        android:layout_width="189dp"
        android:layout_height="48dp"
        app:layout_constraintBottom_toTopOf="@+id/inputFechaSiniestro"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner" />

    <EditText
        android:id="@+id/inputDescripcionNuevoSiniestro"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:autofillHints="name"

        android:background="@drawable/custom_input"
        android:clickable="false"

        android:drawableStart="@drawable/icon_text"
        android:drawablePadding="12dp"
        android:ems="10"
        android:hint="@string/Descripcion"
        android:inputType="text"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        app:layout_constraintBottom_toTopOf="@+id/btnGuardarNuevoSniestro"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inputUbicacionNuevoSiniestro"
        tools:ignore="TextContrastCheck" />

    <EditText
        android:id="@+id/inputUbicacionNuevoSiniestro"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:autofillHints="name"
        android:background="@drawable/custom_input"
        android:clickable="false"
        android:drawableStart="@drawable/icon_place"

        android:drawablePadding="12dp"
        android:ems="10"
        android:hint="@string/Ubicacion"
        android:inputType="text"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        app:layout_constraintBottom_toTopOf="@+id/inputDescripcionNuevoSiniestro"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inputHoraSiniestro"
        tools:ignore="TextContrastCheck" />

    <EditText
        android:id="@+id/inputHoraSiniestro"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:autofillHints="name"
        android:background="@drawable/custom_input"
        android:clickable="false"
        android:drawableStart="@drawable/icon_time"
        android:drawablePadding="12dp"
        android:ems="10"
        android:focusable="false"

        android:hint="@string/Hora"
        android:inputType="text"

        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        app:layout_constraintBottom_toTopOf="@+id/inputUbicacionNuevoSiniestro"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inputFechaSiniestro"
        tools:ignore="TextContrastCheck" />

    <EditText
        android:id="@+id/inputFechaSiniestro"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:autofillHints="date"
        android:background="@drawable/custom_input"
        android:clickable="false"
        android:drawableStart="@drawable/icon_calendar"
        android:drawablePadding="12dp"
        android:ems="10"
        android:focusable="false"

        android:hint="@string/Fecha"
        android:inputType="date"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        app:layout_constraintBottom_toTopOf="@+id/inputHoraSiniestro"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinnerSiniestros"
        tools:ignore="TextContrastCheck" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:text="@string/NuevoSiniestro"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/spinner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.509"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Spinner
        android:id="@+id/spinner"
        android:layout_width="189dp"
        android:layout_height="48dp"
        app:layout_constraintBottom_toTopOf="@+id/spinnerSiniestros"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/btnGuardarNuevoSniestro"
        style="@style/btnStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/Guardar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inputDescripcionNuevoSiniestro" />

</androidx.constraintlayout.widget.ConstraintLayout>
