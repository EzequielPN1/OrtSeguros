<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/idCardViewPago"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:padding="16dp">

        <ImageView
            android:id="@+id/imageViewMensaje"
            android:layout_width="44dp"
            android:layout_height="35dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="150dp"
            android:layout_marginBottom="0dp"
            android:importantForAccessibility="no"
            android:src="@drawable/icon_email"
            tools:ignore="ImageContrastCheck" />

        <ImageView
            android:id="@+id/imageViewTipoSiniestro"
            android:layout_width="131dp"
            android:layout_height="103dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="18dp"

            android:importantForAccessibility="no" />

        <TextView
            android:id="@+id/txtTipoSiniestro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/TipoSiniestro"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txtNumSiniestro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtTipoSiniestro"
            android:layout_marginTop="-1dp"
            android:text="@string/NumSiniestro" />

        <TextView
            android:id="@+id/txtFechaVencimientoCardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtNumSiniestro"
            android:text="fecha"
            android:textSize="16sp"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/txtAbonadoCardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtFechaVencimientoCardView"
            android:text="patente"
            tools:ignore="HardcodedText" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>
