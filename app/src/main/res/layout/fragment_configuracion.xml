<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout7"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.home.cuenta.ConfiguracionFragment"
    android:layout_margin="16dp">

    <TextView
        android:id="@+id/txtConfigTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnConfig"
        style="@style/switchStyle"
        app:layout_constraintBottom_toTopOf="@+id/btnEditarCuenta"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnEditarCuenta"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:backgroundTint="@color/bordo"
        android:text="@string/txtEditarCuenta"
        app:layout_constraintBottom_toTopOf="@+id/btnPreguntasFrecuentes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtConfigTitle" />

    <Button
        android:id="@+id/btnPreguntasFrecuentes"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:backgroundTint="@color/bordo"
        android:text="@string/txtPreguntasFrecuentes"
        app:layout_constraintBottom_toTopOf="@+id/btnAsisMecanica"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnEditarCuenta" />

    <Button
        android:id="@+id/btnAsisMecanica"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:backgroundTint="@color/bordo"
        android:text="@string/txtAsisMecanica"
        app:layout_constraintBottom_toTopOf="@+id/btnContacto"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnPreguntasFrecuentes" />

    <Button
        android:id="@+id/btnContacto"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:backgroundTint="@color/bordo"
        android:text="@string/txtContacto"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnAsisMecanica" />

</androidx.constraintlayout.widget.ConstraintLayout>
