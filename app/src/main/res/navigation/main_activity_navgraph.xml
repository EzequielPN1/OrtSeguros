<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/splash_navgraph"
    app:startDestination="@id/mainActivityFragment">

    <activity
        android:id="@+id/loginActivity"
        android:name="com.example.ortseguros.activities.LoginActivity"
        android:label="activity_login"
        tools:layout="@layout/activity_login" />
    <activity
        android:id="@+id/homeActivity"
        android:name="com.example.ortseguros.activities.HomeActivity"
        android:label="activity_home"
        tools:layout="@layout/activity_mis_polizas" />
    <fragment
        android:id="@+id/mainActivityFragment"
        android:name="com.example.ortseguros.fragments.main.MainActivityFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main" >
        <action
            android:id="@+id/action_mainActivityFragment_to_loginActivity"
            app:destination="@id/loginActivity" />
        <action
            android:id="@+id/action_mainActivityFragment_to_homeActivity2"
            app:destination="@id/homeActivity" />
    </fragment>
</navigation>